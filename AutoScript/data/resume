    // 6 | mouseOver | id=addtocart | 
    {
      WebElement element = driver.findElement(By.id("addtocart"));
      Actions builder = new Actions(driver);
      builder.moveToElement(element).perform();
    }
    // 7 | click | id=open-remove-item-modal | 
    driver.findElement(By.id("open-remove-item-modal")).click();
    // 8 | click | id=remove-item-btn | 
    driver.findElement(By.id("remove-item-btn")).click();
    // 9 | click | id=js-continue-shopping | 
